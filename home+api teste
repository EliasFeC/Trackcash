<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    let chartblock = null;

    async function fetchExchangeRate(base) {
        const apiUrl = `https://economia.awesomeapi.com.br/last/BRL-${base}`;
        try {
            const response = await fetch(`${apiUrl}`);
            const data = await response.json();
            return data;
        } catch (error) {
            console.error('Erro ao buscar taxa de câmbio:', error);
        }
    }

    async function updateExchangeRate() {
        const selectedCurrency = document.getElementById('escolha').value;
        const rates = await fetchExchangeRate(selectedCurrency);
        document.getElementById('exchange-rate').innerText = `Taxa de câmbio para ${selectedCurrency}: ${rates[`BRL${selectedCurrency}`].ask}`;
        var query_vars = {
            apikey: 'fca_live_k7qgm7xjiMokaysiPd3oWbEzdbt8CpcsWwfrvhDH',
            date: "2024-03-04",
            currencies: selectedCurrency,
        }

        const response = await fetch(`https://economia.awesomeapi.com.br/json/daily/BRL-${selectedCurrency}/30`);
        const data = await response.json();
        chart(data,selectedCurrency)
    }
    function chart(data,selectedCurrency) {
        let labels = [];
        let dados = [];
        for (let i = 0; i < data.length; i++) {
            console.log(data[i])
            dados.push(data[i].ask)
            let dt = new Date(parseInt(data[i].timestamp) * 1000);
            labels.push(`${dt.getMonth()}/${dt.getDate()}`)
        }
        if(chartblock){
            chartblock.destroy();
            chartblock = null;
        }
        chartblock = new Chart(ctx, {
            type: 'line',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: `BRL-${selectedCurrency}`,
                        data: dados,
                        tension: 0.4
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    title: {
                        display: true,
                        text: 'Chart.js Line Chart'
                    }
                }
            },
        });
    }

    window.onload = updateExchangeRate;
    const ctx = document.getElementById('myChart');


</script>

</html>
